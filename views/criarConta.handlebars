<!-- link css -->
<link rel="stylesheet" href="/css/conta.css">

<!-- título da página -->
<title>Criar Conta</title>

<!-- container -->
<div class="container">
    <div class="text-center">
        <div class="row align-items-start">
            <!-- parte esquerda - IMAGEM -->
                <div class="col col-img">
                    <img src="/img/cafeteria.jpg" class="img-fluid img-login" alt="Imagem Cafeteria">
                </div>

            <!-- parte direita - FORMS -->
                <div class="col col-forms">
                    
                    <div class="text text-start">
                        <h1 class="titulo">Bem-vindo!</h1>
                        <p>Preencha os campos para criar sua conta e acessar todas as funcionalidades. 
                            Já possui uma conta? <a href="/">Fazer Login</a></p>
                    </div>
                    
                    <!-- Formulário atualizado -->
                    <form class="forms" id="form-cadastrar" action="/criarConta" method="POST">
                        <div class="seila px-5">
                            <!-- campo usuário -->
                                <div class="text-start mt-1">
                                    <label for="usuario" class="form-label">Usuário:</label>
                                    <input type="text" name="usuario" class="form-control input" id="usuario" placeholder="Digite seu nome" maxlength="50" required>
                                </div>

                            <!-- campo email -->
                                <div class="text-start mt-3">
                                    <label for="email" class="form-label">Email:</label>
                                    <input type="email" name="email" class="form-control input" id="email" aria-describedby="email" required>
                                </div>

                            <!-- campo senha -->
                                <div class="text-start mt-3 mb-5">
                                    <label for="senha" class="form-label">Senha:</label>
                                    <input type="password" name="senha" class="form-control input" id="senha" required>
                                </div>
                        </div>
                       
                        <!-- button cadastrar -->               
                            <div class="text-center mt-5">
                                <button type="submit" class="btn text-center btn-primary btn-black btn-cadastrar">Cadastrar</button>
                            </div>                        
                    </form>

                </div>
        </div>
    </div>
</div>