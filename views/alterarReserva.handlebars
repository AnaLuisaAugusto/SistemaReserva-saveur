<!-- link css -->
<link rel="stylesheet" href="/css/cadastrar-alterar.css">

<!-- link js -->
<script src="js/validation-forms.js" defer></script>

<!-- título da página -->
<title>Alterar Reserva</title>

<!-- container -->
<div class="container text-center">
    <div class="row row-forms">
        <div class="div-forms">

            <h3>Editar Reserva</h3>

            <!-- Formulário -->
            <form action="/alterarReserva/{{id}}" method="POST">

                <!-- campo nome -->
                <div class="text-start mt-4 mb-3">
                    <label for="nome" class="form-label">Nome:</label>
                    <input type="text" name="nome" class="form-control input required" id="nome" maxlength="50" value="{{reserva.nome}}" oninput="nameValidate()" required>
                    <span class="span-required">Nome deve ter no mínimo 3 caracteres.</span>
                </div>

                <!-- campo CPF -->
                <div class="text-start mt-4 mb-3">
                    <label for="cpf" class="form-label">CPF:</label>
                    <input type="text" name="cpf" class="form-control input required" id="cpf" maxlength="14" value="{{reserva.cpf}}" oninput="cpfValidate()" required>
                    <span class="span-required">Digite um CPF válido.</span>
                </div>

                <!-- campo data -->
                <div class="text-start mt-4 mb-3">
                    <label for="data" class="form-label">Data:</label>
                    <input type="date" name="data" class="form-control input" id="data" value="{{reserva.data}}" required>
                </div>

                <!-- campo hora -->
                <div class="text-start mt-4 mb-3">
                    <label for="hora" class="form-label">Escolha um horário (entre 08:00 e 18:00):</label>
                    <input type="time" name="hora" class="form-control input required" id="hora" value="{{reserva.hora}}" required>
                    <span class="span-required">Insira um horário entre 08:00 e 18:00.</span>
                </div>

                <!-- campo qtd pessoas -->                    
                <div class="text-start mt-4 mb-3">
                    <label for="numeroPessoas" class="form-label">Número de pessoas (máximo 12):</label>
                    <input type="number" name="qtd_pessoas" class="form-control input" id="qtd_pessoas" value="{{reserva.qtd_pessoas}}" required>
                </div>

                <!-- button alterar -->               
                <div class="mb-3 text-center mt-5">
                    <button type="submit" class="btn text-center btn-primary btn-black">Alterar Reserva</button>
                </div>
            </form>
            <!-- (fim) Formulário -->
        </div>
    </div>
</div>